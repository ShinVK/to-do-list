{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "sourceMap": true,                     
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".", 
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["src/tests"]
  }